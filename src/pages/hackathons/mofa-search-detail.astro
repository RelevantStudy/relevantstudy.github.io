    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- 3) Judging Criteria with Content widget -->
  <Content
    tagline="祝您成功"
    title="评估方法"
    items={[
      {
        title: '完成度和可行性',
        description: '您的智能体必须能够真实运行',
      },
      {
